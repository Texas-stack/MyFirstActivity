<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:background="#FF1493"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/fckgoback"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="24sp" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="#FF1493" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:paddingStart="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/candy"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Конфета1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/firstItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:text="Купить"
            app:icon="@drawable/baseline_shopping_cart_24"
            app:iconGravity="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="110руб"
            android:id="@+id/firstCost"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:paddingStart="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/candy2"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Конфета2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/secondItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:text="Купить"
            app:icon="@drawable/baseline_shopping_cart_24"
            app:iconGravity="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="120руб"
            android:id="@+id/secondCost"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:paddingStart="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/candy3"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Конфета3" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:text="Купить"
            app:icon="@drawable/baseline_shopping_cart_24"
            app:iconGravity="end"
            android:id="@+id/thirdItem"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="130руб"
            android:id="@+id/thirdCost"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <ImageView-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:backgroundTint="@color/white"-->
<!--            android:paddingStart="10dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@mipmap/candy3"-->

<!--            />-->






    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|start"
            android:background="#00FF00" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|end"

            android:background="#FF0000" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Купить"
            android:textSize="25sp"
            android:id="@+id/buyButton"
            />

    </FrameLayout>

</LinearLayout>